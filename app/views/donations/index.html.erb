<p id="notice"><%= notice %></p>


<div class="container">
<h1>Donations</h1>
    <table>
    <thead>
        <tr>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @donations.each do |donation| %>
        <tr>
            <td>Amount to donate: $<%= donation.amount%></td>
            <td>User: <%= donation.user.email%></td>
            <%# <td>Amount to raise: $<%= Publication.amountoraise%></td> 
            <td><%= link_to 'Show', publication_donation_path(@publication, donation) %></td>
            <td><%= link_to 'Edit', edit_publication_donation_path(@publication, donation) %></td>
            <td><%= link_to 'Destroy', publication_donation_path(@publication, donation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
    </table>

    <br>

    <%= link_to 'New Donation', new_publication_donation_path(@publication) %>
</div>