<p id="notice"><%= notice %></p>


<div class="container">
<h1>Donations</h1>
    <table>
    <thead>
        <tr>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @donations.each do |donation| %>
        <tr>
            <td>Amount to donate: $<%= donation.amount%></td>
            <td>User: <%= donation.user.email%></td>
            <%# <td>Amount to raise: $<%= Publication.amountoraise%></td> 
            </tr>
        <% end %>
    </tbody>
    </table>

    <br>

   

    <% if @publication.confirmed_donations_amount == @publication.amountoraise%>
        <%= 'No se permiten más devoluciones ¡Cumplimos la meta!' %> 
    <%else%>
        <%= link_to 'New Donation', new_publication_donation_path(@publication) %>                
    <%end%>
    <br>
    <%= link_to 'Back', publications_path(@publication) %>
</div>